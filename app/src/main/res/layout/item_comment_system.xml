<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_arrondi">

    <RelativeLayout
        android:id="@+id/headRl"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/userLikedAvatarIv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/likedUserNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/userLikedAvatarIv"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="User name"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/hisCommentTv"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/headRl"
        android:padding="15dp"
        android:text="His Comment"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/timeTv"
        android:text="11/10/2020 09:59PM"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_below="@+id/hisCommentTv"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>