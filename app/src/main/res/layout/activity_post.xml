<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_ecran"
    tools:context=".PostActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fitsSystemWindows="true"
        android:background="?colorPrimary">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            app:collapsedTitleGravity="start"
            app:expandedTitleGravity="bottom"
            app:title="@string/app_name"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="exitUntilCollapsed|scroll">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/coverIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_post"
                    android:scaleType="centerCrop"
                    android:contentDescription="TODO COVER POST" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/postImagesRv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_gallery"/>

            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="72dp"
                app:layout_collapseMode="pin"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:elevation="20dp"
                android:background="@drawable/bg_curve">

                <RelativeLayout
                    android:id="@+id/rubanRl"
                    android:layout_above="@+id/footerOnePost"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="#FF3D00"/>

                <TextView
                    android:id="@+id/userInfoTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/rubanRl"
                    android:text="Description de la publication"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/postDescriptionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userInfoTv"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/rubanRl"
                    android:textStyle="italic"
                    android:text="@string/post_description"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/footerOnePost"
                    android:layout_below="@+id/postDescriptionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/likeTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_toStartOf="@+id/favoriteTv"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:text="0"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_no_like" />

                    <TextView
                        android:id="@+id/favoriteTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_toStartOf="@+id/noteTv"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:text="0"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_no_favorite" />

                    <TextView
                        android:id="@+id/shareTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_toStartOf="@+id/signalerTv"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:text="0"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_no_share" />

                    <TextView
                        android:id="@+id/signalerTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:text="0"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_no_signaler" />

                    <TextView
                        android:id="@+id/noteTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:background="@null"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize="9sp"
                        android:text="0"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_no_note" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:elevation="20dp"
                android:background="@drawable/bg_curve">

                <RelativeLayout
                    android:id="@+id/rubanCommentairenRl"
                    android:layout_above="@+id/commentsRv"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="#FF3D00"/>

                <RelativeLayout
                    android:id="@+id/commentHeadRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rubanCommentairenRl"
                    android:background="#2FFFFFFF">

                    <TextView
                        android:id="@+id/commentairesTv"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Commentaires"/>

                    <RelativeLayout
                        android:id="@+id/commentFooterRl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/commentairesTv"
                        android:padding="5dp"
                        android:background="@drawable/bg_home_fragment"
                        android:layout_alignParentBottom="true">

                        <EditText
                            android:id="@+id/commentEdtv"
                            android:hint="Votre commentaire"
                            android:background="@color/white"
                            android:layout_toEndOf="@+id/userIv"
                            android:layout_toStartOf="@+id/sendIb"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ImageButton
                            android:id="@+id/sendIb"
                            android:text="0 Commentaires"
                            android:background="@null"
                            android:src="@drawable/ic_send"
                            android:layout_alignParentEnd="true"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/commentsRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_comment"
                    android:layout_below="@+id/commentHeadRl"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>