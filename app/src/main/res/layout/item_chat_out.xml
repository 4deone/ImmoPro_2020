<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/userLikedAvatarIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user" />

    <TextView
        android:id="@+id/hisCommentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/userLikedAvatarIv"
        android:background="@drawable/bg_out"
        android:padding="20dp"
        android:text="His Comment"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hisCommentTv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:layout_toStartOf="@+id/userLikedAvatarIv"
        android:background="@null"
        android:text="11/10/2020 09:59PM"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="italic" />

</RelativeLayout>