<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:id="@+id/rlPostSettings">

    <ImageView
        android:id="@+id/ivItemPost"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_post"
        android:contentDescription="TODO POST SETTINGS" />

    <TextView
        android:id="@+id/itemTitlePostTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivItemPost"
        android:layout_toStartOf="@+id/itemViewsPostTv"
        android:ellipsize="end"
        android:paddingStart="5dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:text="Titre du Post"
        android:textSize="11sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/itemDescriptionPostTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivItemPost"
        android:layout_toStartOf="@+id/itemViewsPostTv"
        android:layout_below="@+id/itemTitlePostTv"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingStart="5dp"
        android:textSize="10sp"
        android:text="Description du Post"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/itemViewsPostTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="40"
        android:textStyle="bold"
        android:background="@drawable/bg_cercle"
        android:textColor="@color/white" />

</RelativeLayout>